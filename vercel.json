{
  "version": 2,
  "builds": [
    { "src": "app.py", "use": "@vercel/python" },
    { "src": "api/ads.txt", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/ads.txt", "dest": "/api/ads.txt" },
    { "src": "/robots.txt", "dest": "/robots.txt" },
    {
      "src": "/sitemap.xml",
      "dest": "/app.py",
      "headers": { "Content-Type": "application/xml" }
    },
    { "src": "/(.*)", "dest": "/app.py" }
  ]
}
