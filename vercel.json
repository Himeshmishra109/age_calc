{
  "version": 2,
  "builds": [{ "src": "app.py", "use": "@vercel/python" }],
  "routes": [
    {
      "src": "/sitemap.xml",
      "dest": "/app.py",
      "headers": { "Content-Type": "application/xml" }
    },
    { "src": "/(.*)", "dest": "/app.py" }
  ]
  
  "redirects": [
    {
      "source": "/ads.txt",
      "destination": "https://srv.adstxtmanager.com/13990/[YOUR_DOMAIN].com",
      "permanent": true
    }
  ]
}

