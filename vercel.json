{
  "version": 2,
  "builds": [
    { "src": "app.py", "use": "@vercel/python" }
  ],
  "routes": [
    { "src": "/robots.txt", "dest": "/robots.txt", "headers": { "Content-Type": "text/plain" }},
    { "src": "/ads.txt", "dest": "/ads.txt", "headers": { "Content-Type": "text/plain" }},
    {
      "src": "/sitemap.xml",
      "dest": "/sitemap.xml",
      "headers": { "Content-Type": "application/xml" }
    },
    { "src": "/(.*)", "dest": "/app.py" }
  ]
}
